# Application Configuration
APP_NAME="Gallup Strengths Assessment API"
APP_VERSION="1.0.0"
DEBUG=false

# Server Configuration
HOST="127.0.0.1"
PORT=8000

# Database Configuration
DATABASE_URL="sqlite+aiosqlite:///./gallup_strengths.db"
DATABASE_SYNC_URL="sqlite:///./gallup_strengths.db"
ECHO_SQL=false

# Security Configuration
SECRET_KEY="change-this-to-a-secure-secret-key-at-least-32-characters-long"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Configuration
BACKEND_CORS_ORIGINS="http://localhost:3000,http://localhost:8080,http://localhost:5173"

# Psychology/Compliance Settings
SESSION_TTL_HOURS=24
SENSITIVE_DATA_TTL_HOURS=24
AUDIT_LOGGING_ENABLED=true
DATA_ANONYMIZATION_ENABLED=true
CONSENT_REQUIRED=true

# Privacy Protection
ANONYMIZE_IP_ADDRESSES=true
LOG_PERSONAL_DATA=false

# Assessment Configuration
MAX_ASSESSMENT_ATTEMPTS=3
QUESTION_TIME_LIMIT_SECONDS=300
SESSION_INACTIVITY_TIMEOUT_MINUTES=30

# Data Retention (GDPR Compliance)
DATA_RETENTION_DAYS=365
AUDIT_LOG_RETENTION_DAYS=2555