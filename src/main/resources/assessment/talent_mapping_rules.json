  "mapping_rules": {
    "primary_classification": {
      "description": "基於主導才幹（Top 4）的組合模式進行分類",
      "algorithm": "weighted_pattern_matching",
      "weight_distribution": {
        "rank_1": 0.4,
        "rank_2": 0.3,
        "rank_3": 0.2,
        "rank_4": 0.1
      }
    },

    "domain_preference_scoring": {
      "EXECUTING": {
        "talents": ["T1", "T2", "T12"],
        "archetype_affinity": {
          "ARCHITECT": 0.7,
          "GUARDIAN": 0.9,
          "IDEALIST": 0.3,
          "ARTISAN": 0.4
        }
      },
      "INFLUENCING": {
        "talents": ["T5", "T7", "T11"],
        "archetype_affinity": {
          "ARCHITECT": 0.4,
          "GUARDIAN": 0.5,
          "IDEALIST": 0.7,
          "ARTISAN": 0.9
        }
      },
      "RELATIONSHIP_BUILDING": {
        "talents": ["T6", "T9", "T10"],
        "archetype_affinity": {
          "ARCHITECT": 0.3,
          "GUARDIAN": 0.8,
          "IDEALIST": 0.9,
          "ARTISAN": 0.7
        }
      },
      "STRATEGIC_THINKING": {
        "talents": ["T3", "T4", "T8"],
        "archetype_affinity": {
          "ARCHITECT": 0.9,
          "GUARDIAN": 0.4,
          "IDEALIST": 0.8,
          "ARTISAN": 0.5
        }
      }
    },

    "specific_talent_indicators": {
      "ARCHITECT_indicators": {
        "must_have": ["T4", "T1"],
        "strong_indicators": ["T3", "T8", "T12"],
        "pattern": "STRATEGIC_THINKING主導 + EXECUTING支撐",
        "threshold": 0.75
      },
      "GUARDIAN_indicators": {
        "must_have": ["T12", "T9"],
        "strong_indicators": ["T2", "T1", "T6"],
        "pattern": "EXECUTING主導 + RELATIONSHIP_BUILDING支撐",
        "threshold": 0.75
      },
      "IDEALIST_indicators": {
        "must_have": ["T6", "T8"],
        "strong_indicators": ["T5", "T11", "T7"],
        "pattern": "RELATIONSHIP_BUILDING主導 + 人際影響力",
        "threshold": 0.70
      },
      "ARTISAN_indicators": {
        "must_have": ["T5", "T10"],
        "strong_indicators": ["T3", "T7", "T11"],
        "pattern": "INFLUENCING主導 + 壓力適應力",
        "threshold": 0.70
      }
    },

    "balance_profile_modifiers": {
      "balanced_profile": {
        "condition": "DBI > 0.70 AND entropy > 0.70",
        "effect": "降低極端原型分類，傾向混合型",
        "modifier": 0.8
      },
      "specialized_profile": {
        "condition": "DBI < 0.50 AND entropy < 0.50",
        "effect": "強化主導原型特徵",
        "modifier": 1.3
      },
      "complementary_profile": {
        "condition": "0.50 <= DBI <= 0.70",
        "effect": "保持正常分類邏輯",
        "modifier": 1.0
      }
    }
  },

  "classification_algorithm": {
    "step_1_talent_scoring": {
      "description": "計算每個原型的才幹匹配分數",
      "formula": "Σ(talent_weight × rank_weight × affinity_score)",
      "inputs": ["user_top_talents", "talent_rankings", "archetype_affinities"]
    },

    "step_2_domain_scoring": {
      "description": "計算領域偏好匹配分數",
      "formula": "Σ(domain_percentile × domain_affinity)",
      "inputs": ["user_domain_scores", "archetype_domain_preferences"]
    },

    "step_3_pattern_matching": {
      "description": "檢查特定原型指標模式",
      "logic": "IF must_have_talents THEN apply_pattern_bonus",
      "bonus_multiplier": 1.5
    },

    "step_4_balance_adjustment": {
      "description": "根據均衡度調整分類",
      "logic": "apply balance_profile_modifiers",
      "final_adjustment": "normalize_to_probabilities"
    },

    "step_5_confidence_calculation": {
      "description": "計算分類信心度",
      "factors": [
        "highest_score_margin",
        "pattern_match_strength",
        "domain_consistency",
        "talent_ranking_clarity"
      ],
      "confidence_levels": {
        "high": "> 0.80",
        "medium": "0.60 - 0.80",
        "low": "< 0.60"
      }
    }
  },

